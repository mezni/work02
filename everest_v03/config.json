{
  "realm": "myrealm",
  "enabled": true,

  "roles": {
    "realm": [
      { "name": "admin", "description": "Administrator role with full access" },
      { "name": "user", "description": "Regular user role" },
      { "name": "operator", "description": "Operator role for system operations" },
      { "name": "partner", "description": "Partner/external collaborator role" }
    ],
    "client": {
      "realm-management": [
        { "name": "admin", "description": "Full admin access" }
      ]
    }
  },

  "clients": [
    {
      "clientId": "authclient",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": ["http://localhost:8081/callback"],
      "webOrigins": ["http://localhost:8081"],
      "protocolMappers": [
        {
          "name": "company_name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "company_name",
            "access.token.claim": "company_name",
            "claim.name": "company_name",
            "jsonType.label": "String"
          }
        },
        {
          "name": "station_name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "station_name",
            "access.token.claim": "station_name",
            "claim.name": "station_name",
            "jsonType.label": "String"
          }
        }
      ]
    },

    {
      "clientId": "backend-admin",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "<GENERATED_SECRET>",
      "clientAuthenticatorType": "client-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "redirectUris": [],
      "webOrigins": []
    }
  ],

  "users": [
    {
      "username": "service-account-backend-admin",
      "enabled": true,
      "serviceAccountClientId": "backend-admin",
      "clientRoles": {
        "realm-management": ["admin"]
      }
    }
  ]
}
