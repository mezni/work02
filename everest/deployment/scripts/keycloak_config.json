{
  "realm": "auth-domain",
  "enabled": true,
  "registrationAllowed": true,
  "verifyEmail": true,

  "clients": [
    {
      "clientId": "auth-service",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "redirectUris": ["http://localhost/*"],
      "webOrigins": ["*"],
      "secret": "CHANGE_ME",

      "protocolMappers": [
        {
          "name": "realm-role-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "company_name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "company_name",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "company_name",
            "jsonType.label": "String"
          }
        },
        {
          "name": "groups",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper",
          "config": {
            "full.path": "true",
            "token.claim.name": "groups",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],

  "roles": {
    "realm": [
      { "name": "admin" },
      { "name": "operator" },
      { "name": "partner" },
      { "name": "user" },
      { "name": "guest" },

      { "name": "perm:create" },
      { "name": "perm:read" },
      { "name": "perm:update" },
      { "name": "perm:delete" },
      { "name": "perm:manage" }
    ]
  },

  "groups": [
    { "name": "CompanyA" },
    { "name": "CompanyB" }
  ]
}
